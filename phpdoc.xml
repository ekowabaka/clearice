<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
    <title>ClearIce Library</title>
    <parser>
        <target>docs_generated/phpdoc</target>
        <encoding>utf8</encoding>
        <markers>
            <item>TODO</item>
            <item>FIXME</item>
        </markers>
        <extensions>
            <extension>php</extension>
        </extensions>
        <visibility>public,protected</visibility>
    </parser>
    <transformer>
        <target>docs_generated/phpdoc</target>
    </transformer>
    <logging>
        <level>warn</level>
        <paths>
            <default>{APP_ROOT}/data/log/{DATE}.log</default>
            <errors>{APP_ROOT}/data/log/{DATE}.errors.log</errors>
        </paths>
    </logging>
    <transformations>
        <template name="xml" />
    </transformations>
    <files>
        <directory>src</directory>
        <ignore>tests/*</ignore>
    </files>
</phpdoc>
